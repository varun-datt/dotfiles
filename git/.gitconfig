[user]
  name = Varun Datt
  email = datt.var@gmail.com

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  eol = lf
  autocrlf = false
  safecrlf = false
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space
  excludesfile = /Users/varun.datt/.gitignore_global

[alias]
  st = status
  cm = commit
  br = branch
  co = checkout
  df = diff
  dfc = diff --cached
  lg = log -p
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  g = grep --break --heading --line-number
  type = cat-file -t
  dump = cat-file -p

[push]
  default = tracking

[help]
  autocorrect = 5

[grep]
  extendRegexp = true
  lineNumber = true
